    <script>
        // Navigation System
        document.addEventListener('DOMContentLoaded', function() {
            // Show home page by default
            showPage('home-page');
            
            // Navigation links
            document.querySelectorAll('.nav-link').forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    const pageId = this.getAttribute('data-page');
                    showPage(pageId);
                    
                    // Update active nav link
                    document.querySelectorAll('.nav-link').forEach(nav => {
                        nav.classList.remove('active');
                    });
                    this.classList.add('active');
                });
            });
            
            // Buttons with data-page attribute
            document.querySelectorAll('button[data-page]').forEach(button => {
                button.addEventListener('click', function() {
                    const pageId = this.getAttribute('data-page');
                    const target = this.getAttribute('data-target');
                    
                    showPage(pageId);
                    
                    // Update active nav link
                    document.querySelectorAll('.nav-link').forEach(nav => {
                        nav.classList.remove('active');
                        if (nav.getAttribute('data-page') === pageId) {
                            nav.classList.add('active');
                        }
                    });
                    
                    // Scroll to target if specified
                    if (target) {
                        setTimeout(() => {
                            const targetElement = document.getElementById(target);
                            if (targetElement) {
                                targetElement.scrollIntoView({ behavior: 'smooth' });
                            }
                        }, 100);
                    }
                });
            });
            
            // Animate counters
            animateCounters();
            
            // Initialize form validations
            initializeForms();
            
            // Generate QR codes
            generateQRCode();
        });
        
        function showPage(pageId) {
            // Hide all pages
            document.querySelectorAll('.page-section').forEach(page => {
                page.style.display = 'none';
            });
            
            // Show selected page
            const activePage = document.getElementById(pageId);
            if (activePage) {
                activePage.style.display = 'block';
                window.scrollTo(0, 0);
                
                // Update stats when laporan page is shown
                if (pageId === 'laporan-page') {
                    updateLaporanStats();
                }
            }
        }
        
        function animateCounters() {
            const counters = document.querySelectorAll('.counter');
            
            counters.forEach(counter => {
                const target = parseFloat(counter.getAttribute('data-target'));
                const increment = target / 100;
                let current = 0;
                
                const timer = setInterval(() => {
                    current += increment;
                    if (current >= target) {
                        clearInterval(timer);
                        current = target;
                    }
                    
                    // Format angka dengan koma jika perlu
                    if (counter.parentElement.textContent.includes('KG') || counter.parentElement.textContent.includes('L')) {
                        counter.textContent = current.toFixed(1);
                    } else {
                        counter.textContent = Math.floor(current);
                    }
                }, 20);
            });
        }
        
        function updateLaporanStats() {
            // Data real untuk laporan bulan ini
            const stats = {
                totalLimbah: 12,
                briketProduksi: 45,
                partisipan: 6,
                penguranganCO2: 20
            };
            
            // Update stat cards
            document.getElementById('totalLimbah').textContent = stats.totalLimbah;
            document.getElementById('briketProduksi').textContent = stats.briketProduksi;
            document.getElementById('partisipan').textContent = stats.partisipan;
            document.getElementById('penguranganCO2').textContent = stats.penguranganCO2;
        }
        
        function initializeForms() {
            // Validasi form kertas
            document.getElementById('kertasForm').addEventListener('submit', function(e) {
                e.preventDefault();
                
                const name = document.getElementById('nameK').value;
                const email = document.getElementById('emailK').value;
                const jumlah = document.getElementById('jumlahK').value;
                
                let isValid = true;
                
                // Validasi nama
                if (name.length < 3) {
                    document.getElementById('errorNameK').style.display = 'block';
                    isValid = false;
                } else {
                    document.getElementById('errorNameK').style.display = 'none';
                }
                
                // Validasi email
                const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                if (!emailRegex.test(email)) {
                    document.getElementById('errorEmailK').style.display = 'block';
                    isValid = false;
                } else {
                    document.getElementById('errorEmailK').style.display = 'none';
                }
                
                // Validasi jumlah
                if (parseFloat(jumlah) <= 0) {
                    document.getElementById('errorJumlahK').style.display = 'block';
                    isValid = false;
                } else {
                    document.getElementById('errorJumlahK').style.display = 'none';
                }
                
                if (isValid) {
                    console.log({
                        name: name,
                        email: email,
                        phone: document.getElementById('phoneK').value,
                        address: document.getElementById('addressK').value,
                        jenis: document.getElementById('jenisKertas').value,
                        jenisLimbah: 'Limbah Kertas',
                        jumlah: jumlah,
                        notes: document.getElementById('notesK').value
                    });
                    
                    document.getElementById('msgK').style.display = 'block';
                    this.reset();
                    
                    // Sembunyikan pesan setelah 5 detik
                    setTimeout(() => {
                        document.getElementById('msgK').style.display = 'none';
                    }, 5000);
                }
            });

            // Validasi form jelantah
            document.getElementById('jelantahForm').addEventListener('submit', function(e) {
                e.preventDefault();
                
                const name = document.getElementById('nameJ').value;
                const email = document.getElementById('emailJ').value;
                const jumlah = document.getElementById('jumlahJ').value;
                
                let isValid = true;
                
                // Validasi nama
                if (name.length < 3) {
                    document.getElementById('errorNameJ').style.display = 'block';
                    isValid = false;
                } else {
                    document.getElementById('errorNameJ').style.display = 'none';
                }
                
                // Validasi email
                const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                if (!emailRegex.test(email)) {
                    document.getElementById('errorEmailJ').style.display = 'block';
                    isValid = false;
                } else {
                    document.getElementById('errorEmailJ').style.display = 'none';
                }
                
                // Validasi jumlah
                if (parseFloat(jumlah) <= 0) {
                    document.getElementById('errorJumlahJ').style.display = 'block';
                    isValid = false;
                } else {
                    document.getElementById('errorJumlahJ').style.display = 'none';
                }
                
                if (isValid) {
                    console.log({
                        name: name,
                        email: email,
                        phone: document.getElementById('phoneJ').value,
                        address: document.getElementById('addressJ').value,
                        jenis: document.getElementById('jenisMinyak').value,
                        kondisi: document.getElementById('kondisiMinyak').value,
                        jenisLimbah: 'Minyak Jelantah',
                        jumlah: jumlah,
                        notes: document.getElementById('notesJ').value
                    });
                    
                    document.getElementById('msgJ').style.display = 'block';
                    this.reset();
                    
                    // Sembunyikan pesan setelah 5 detik
                    setTimeout(() => {
                        document.getElementById('msgJ').style.display = 'none';
                    }, 5000);
                }
            });

            // Validasi form kontak
            document.getElementById('contactForm').addEventListener('submit', function(e) {
                e.preventDefault();
                
                const name = document.getElementById('contactName').value;
                const email = document.getElementById('contactEmail').value;
                const message = document.getElementById('contactMessage').value;
                
                let isValid = true;
                
                // Validasi nama
                if (name.length < 3) {
                    document.getElementById('errorContactName').style.display = 'block';
                    isValid = false;
                } else {
                    document.getElementById('errorContactName').style.display = 'none';
                }
                
                // Validasi email
                const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                if (!emailRegex.test(email)) {
                    document.getElementById('errorContactEmail').style.display = 'block';
                    isValid = false;
                } else {
                    document.getElementById('errorContactEmail').style.display = 'none';
                }
                
                // Validasi pesan
                if (message.length < 10) {
                    document.getElementById('errorContactMessage').style.display = 'block';
                    isValid = false;
                } else {
                    document.getElementById('errorContactMessage').style.display = 'none';
                }
                
                if (isValid) {
                    console.log({
                        name: name,
                        email: email,
                        phone: document.getElementById('contactPhone').value,
                        subject: document.getElementById('contactSubject').value,
                        message: message
                    });
                    
                    document.getElementById('contactMsg').style.display = 'block';
                    this.reset();
                    
                    // Sembunyikan pesan setelah 5 detik
                    setTimeout(() => {
                        document.getElementById('contactMsg').style.display = 'none';
                    }, 5000);
                }
            });
        }
        
        // Fungsi untuk quiz interaktif
        function checkAnswer(element, status) {
            // Reset semua option
            const options = element.parentElement.querySelectorAll('.quiz-option');
            options.forEach(opt => {
                opt.classList.remove('correct', 'incorrect');
            });
            
            // Tandai jawaban yang dipilih
            element.classList.add(status);
            
            // Berikan feedback
            if (status === 'correct') {
                element.innerHTML += ' ‚úÖ';
            } else {
                element.innerHTML += ' ‚ùå';
            }
        }
        
        // Fungsi untuk generate QR Code
        function generateQRCode() {
            // URL untuk website SMART BRIKET
            const websiteUrl = "https://smartbriket.id";
            
            // Data kontak untuk QR Code kontak
            const contactData = `BEGIN:VCARD
VERSION:3.0
FN:SMART BRIKET
ORG:SMART BRIKET - Zero Waste Program
TEL:081234567890
EMAIL:smartbriket@pesantren.id
URL:${websiteUrl}
NOTE:Program pengolahan limbah kertas dan minyak jelantah menjadi briket ramah lingkungan
END:VCARD`;
            
            // Generate QR Code untuk website
            const qrCanvas = document.getElementById('qrCanvas');
            if (qrCanvas) {
                drawQRCode(qrCanvas, websiteUrl);
            }
            
            // Generate QR Code untuk kontak
            const contactQrCanvas = document.getElementById('contactQrCanvas');
            if (contactQrCanvas) {
                drawQRCode(contactQrCanvas, contactData);
            }
        }
        
        // Fungsi untuk menggambar QR Code
        function drawQRCode(canvas, text) {
            const ctx = canvas.getContext('2d');
            const size = 180;
            
            // Set canvas size
            canvas.width = size;
            canvas.height = size;
            
            // Clear canvas
            ctx.fillStyle = 'white';
            ctx.fillRect(0, 0, size, size);
            
            // Draw QR code pattern (simplified version)
            ctx.fillStyle = 'black';
            
            // Draw outer squares
            ctx.fillRect(10, 10, 40, 40);
            ctx.fillRect(size - 50, 10, 40, 40);
            ctx.fillRect(10, size - 50, 40, 40);
            
            // Draw inner squares
            ctx.fillRect(20, 20, 20, 20);
            ctx.fillRect(size - 40, 20, 20, 20);
            ctx.fillRect(20, size - 40, 20, 20);
            
            // Draw pattern lines
            for (let i = 0; i < 7; i++) {
                const y = 60 + i * 15;
                ctx.fillRect(15, y, size - 30, 5);
            }
            
            // Draw SMART BRIKET text in the center
            ctx.fillStyle = '#0f766e';
            ctx.font = 'bold 14px Arial';
            ctx.textAlign = 'center';
            ctx.fillText('SMART', size/2, size/2 - 5);
            ctx.fillText('BRIKET', size/2, size/2 + 10);
        }
    </script>
</body>
</html>
